@model List<OfferType>
@await Html.PartialAsync("_NavbarWash")
@{
    OfferType offer = new();
}

<div class="container mt-4 d-flex flex-wrap">

    @foreach(OfferType offerType in Model)
    {
        <div class="card m-2" style="max-width: 14rem;">
            <div class="card-body d-flex flex-row align-items-center">
                <p style="    font-family: sans-serif;" class="card-text">@offerType.Title</p>
            </div>
        </div>
    }
</div>


@await Html.PartialAsync("_CreateOfferType", offer)
