@model AddressUpdateViewModel
@await Html.PartialAsync("_NavbarUser")

<div class="container mt-5">

    <form asp-action="UpdateAddress" method="post">
        <div class="mb-3">
            <label style="font-family: sans-serif;" for="Street" class="form-label">Street</label>
            <input type="text" asp-for="Street" class="form-control" />
        </div>

        <div class="mb-3">
            <label style="font-family: sans-serif;" for="City" class="form-label">City</label>
            <input type="text" asp-for="City" class="form-control" />
        </div>

        <div class="mb-3">
            <label style="font-family: sans-serif;" for="State" class="form-label">State</label>
            <input type="text" asp-for="State" class="form-control" />
        </div>

        <div class="mb-3">
            <label style="font-family: sans-serif;" for="PostalCode" class="form-label">Postal Code</label>
            <input type="text" asp-for="PostalCode" class="form-control" />
        </div>

        <button type="submit" class="btn btn-SecondPart" style="border: 1px solid black ;  font-family: sans-serif; "> Update Your Address</button>
    </form>
</div>
