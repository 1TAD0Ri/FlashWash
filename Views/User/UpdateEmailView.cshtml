@model EmailUpdateViewModel
@await Html.PartialAsync("_NavbarUser")



<form asp-action="UpdateEmail" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label style="font-family: sans-serif; " asp-for="NewEmail"></label>
        <input asp-for="NewEmail" class="form-control" />
        <span asp-validation-for="NewEmail" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-SecondPart" style="border: 1px solid black ;  font-family: sans-serif; margin-top:10px "> Update Your Email</button>
</form>
