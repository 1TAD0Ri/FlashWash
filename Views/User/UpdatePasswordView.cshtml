@model User
@await Html.PartialAsync("_NavbarUser")

<form asp-action="UpdatePassword" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label style="font-family: sans-serif;">Old Password</label>
        <input type="password" name="oldPassword" class="form-control" />
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Password)</span>
    </div>

    <div class="form-group">
        <label style="font-family: sans-serif;">New Password</label>
        <input type="password" name="newPassword" class="form-control" />
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Password)</span>
    </div>

    <div class="form-group">
        <label style="font-family: sans-serif;">Confirm New Password</label>
        <input type="password" name="confirmNewPassword" class="form-control" />
        <span class="text-danger">@Html.ValidationMessageFor(m => m.Password)</span>
    </div>

    <button type="submit" class="btn btn-SecondPart" style="border: 1px solid black; font-family: sans-serif; margin-top:10px">Update Your Password</button>
</form>
