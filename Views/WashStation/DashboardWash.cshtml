@model WashStation

@await Html.PartialAsync("_NavbarWash")

<div class="container" style="padding: 10px; font-family: sans-serif;">
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">WashStation Information</h5>
                    <p class="card-text">Owner Name: @Model.OwnerName</p>
                    <p class="card-text">Name: @Model.Name</p>
                    <p class="card-text">Email: @Model.Email</p>

                    <h6 class="card-subtitle mt-4 mb-2 text-muted">Shift Timings</h6>
                    <p class="card-text">Morning Shift: @Model.MorningStartTime - @Model.MorningEndTime</p>
                    <p class="card-text">Evening Shift: @Model.EveningStartTime - @Model.EveningEndTime</p>

                    <h6 class="card-subtitle mt-4 mb-2 text-muted">Contact Information</h6>
                    <p class="card-text">Telephone: @Model.Telephone</p>

                    <h6 class="card-subtitle mt-4 mb-2 text-muted">Accepted Payment Methods</h6>
                    <p class="card-text">Accept Credit Card: @Model.AcceptCreditCard </p>
                    <p class="card-text">Accept Cash:  @Model.AcceptCash </p>
                    <p class="card-text">Accept Mobile Payment: @Model.AcceptMobilePayment </p>

                    <h6 class="card-subtitle mt-4 mb-2 text-muted">Address Information</h6>
                    <p class="card-text">Postal Code: @Model.Address.PostalCode</p>
                    <p class="card-text">Street: @Model.Address.Street</p>
                    <p class="card-text">City: @Model.Address.City</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <h1 style="font-size: x-large; color: black; margin-bottom: 20px;">List Of Created Offers</h1>
            @if (Model.Offers != null && Model.Offers.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Duration</th>
                                <th>Image</th>
                                <th>Working Hours</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var offer in Model.Offers)
                            {
                                <tr>
                                    <td>@offer.Title</td>
                                    <td>@offer.Description</td>
                                    <td>@offer.Price TND</td>
                                    <td>@offer.DurationMinutes Minutes</td>
                                    <td>
                                        <img src="@offer.ImageUrl" alt="Offer Image" width="50" height="50" />
                                    </td>
                                    <td>
                                        Morning: @Model.MorningStartTime - @Model.MorningEndTime <br />
                                        Evening: @Model.EveningStartTime - @Model.EveningEndTime
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p>No offers available.</p>
            }
        </div>
    </div>
</div>
