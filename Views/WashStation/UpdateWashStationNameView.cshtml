@model UpdateNameWashViewModel
@await Html.PartialAsync("_NavbarWash")



<h2>Update Wash Station Name</h2>

<form asp-action="UpdateWashStationName" method="post">
    <div class="mb-3">
        <label for="NewName" class="form-label" style="font-family: sans-serif;">New Name</label>
        <input type="text" asp-for="NewName" class="form-control" style="font-family: sans-serif; border: 1px solid #ced4da;" />
        <span asp-validation-for="NewName" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-SecondPart" style="border: 1px solid black;  font-family: sans-serif; margin-top:5px ">Update Your Name </button>
</form>
